---

import { getEntry, type CollectionEntry, getCollection } from "astro:content";
import { Image } from "astro:assets";
import BaseLayout from "../../layouts/BaseLayout.astro";
import AuthorCard from "../../components/AuthorCard.astro";

export async function getStaticPaths() {
  const posts = await getCollection("posts", ({ data }) => !data.isDraft);
  return posts.map(p => {
    return {
      params: { slug: p.slug }
    }
  });
}

const { slug } = Astro.params;

const post = await getEntry("posts", slug);

const { Content, headings } = await post.render();
const author = await getEntry("team", post.data.author.id);
---

<BaseLayout title="Home">
  <h1>{post.data.title}</h1>
  <AuthorCard authorId={post.data.author.id} />
  <h4>By {author.data.name} on {post.data.pubDate.toLocaleDateString()}</h4>
  <Content />
</BaseLayout>