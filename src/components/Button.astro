---
const { isBordered, classList, background, color, ...rest } = Astro.props;
---

<button class:list={[ "btn", classList, {bordered: isBordered} ]} {...rest}>
    <slot></slot>
</button>

<style define:vars={{
    background,
    color
}}>
    .btn {
        font: inherit;
        max-width: fit-content;
        display: flex;
        gap: .25rem;
        align-items: center;
        cursor: pointer;
        border: none;
        padding: .5rem 1.25rem;
        border-radius: .25rem;
        background: var(--background);
        color: var(--color);
    }
</style>